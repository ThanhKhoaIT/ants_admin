<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="<%= @current_user.avatar %>" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p><%= @current_user.full_name %></p>
                <p><%= @current_user.username rescue @current_user.email %></p>
            </div>
        </div>

        <% render partial: '/layouts/areas/search_box' %>

        <%= main_menu_ants_admin(@main_menu) %>

    </section>
    <!-- /.sidebar -->
</aside>
<script>
  $(".sidebar .treeview").tree();
</script>
