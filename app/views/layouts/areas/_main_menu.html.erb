<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/assets/ants_admin/avatar.png" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p><%= @current_user.to_s %></p>

                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        
        <% render partial: '/layouts/areas/search_box' %>
        
        <% data_menu = YAML.load_file("#{Rails.root}/config/ants_admin_menu.yml") %>
        <%= main_menu_ants_admin(data_menu) %>
        
    </section>
    <!-- /.sidebar -->
</aside>
