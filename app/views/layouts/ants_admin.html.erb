<!DOCTYPE html>
<html>
<head>
  <title><%= name_show %> || Admin</title>
  <link href="/assets/ants_admin/favicon.ico" type="image/x-icon" rel="icon">
  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
  <%= stylesheet_link_tag    "ants_admin/application", :media => "all" %>  
  <%= javascript_include_tag "ants_admin/application" %>
  <%= csrf_meta_tags %>
</head>
<body id="ants_admin" class="skin-black fixed">
  <%= render :partial => "/layouts/areas/header" %>
  <div class="wrapper row-offcanvas row-offcanvas-left blur_content">
    <%= render :partial => "/layouts/areas/main_menu" %>
    <aside class="right-side">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissable" style="display:none">
          <i class="fa fa-check"></i>
          <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
          <%= flash[:notice] %>
        </div>
        <% if flash[:id] %>
          <script>
            window.AntsAdmin.last_object_id = <%= flash[:id] %>;
            $(".alert").fadeIn();
            setTimeout(function(){$(".alert").fadeOut()}, 5000);
          </script>
        <% end %>
      <% end %>
    
      <%= yield %>
    </aside>
  </div>
  <%= render partial: 'ants_admin/shares/upload_photo' %>
</body>
</html>