<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), class: "text-center bg-gray link" %>
<% end -%>

<%- if ants_admin_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", "/#{resource_name}/sign_up", class: "text-center bg-gray link" %>
<% end -%>

<%- if ants_admin_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", "/#{resource_name}/password/new", class: "text-center bg-gray link" %>
<% end -%>

<%- if ants_admin_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-center bg-gray link" %>
<% end -%>

<%- if ants_admin_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-center bg-gray link" %>
<% end -%>

<%- if ants_admin_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "text-center bg-gray link" %>
  <% end -%>
<% end -%>