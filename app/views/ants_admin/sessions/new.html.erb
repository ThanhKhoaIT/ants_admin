<div class="form-box" id="login-box"> 
    <div class="header">Sign In</div>
    <%= form_for(resource, as: resource_name, url: "/#{resource_name}/sign_in") do |f| %>
        <div class="body bg-gray">
            <div class="form-group">
              <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Username or email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
            </div>          
            <div class="form-group">
              <%= f.check_box :remember_me %> Remember me
            </div>
        </div>
        <div class="footer">                                                               
            <button type="submit" class="btn bg-olive btn-block">Login</button>  
            <%= render "ants_admin/shared/links" %>
        </div>
    <% end %>
</div>
