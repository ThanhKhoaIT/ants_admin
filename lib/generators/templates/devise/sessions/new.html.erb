<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<div class="account-wall">
				<img class="profile-img" src="/assets/devise/avatar.png"
				alt="">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
				<%= f.text_field :login, autofocus: true, class: "form-control", placeholder: t('devise.inputs.login'), required:'', autofocus:'' %>
				<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t('devise.inputs.password'), required:'' %>
				<%= f.submit t('devise.buttons.login'), class: 'btn btn-lg btn-primary btn-block' %>
				<% if devise_mapping.rememberable? %>
				<label class="checkbox pull-left">
					<%= f.check_box :remember_me %> <%= t('devise.labels.remember') %>
				</label>
				<% end %>
				<%= render "devise/shared/links" %>
				<% end %>
					
			</div>
		</div>
	</div>
</div>
