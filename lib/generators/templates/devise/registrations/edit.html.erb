<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<div class="account-wall">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>

				<%= devise_error_messages! %>
				<div class='file-avatar'>
					<img class="profile-img" src="<%= f.object.avatar.url %>">
					<%= f.file_field :avatar, class: 'avatar' %>
				</div>
				<div class='grp-inputs'>
					<%= f.text_field :username, autofocus: true, class: "form-control", placeholder: t('devise.inputs.username'), required:'', autofocus:'' %>
					<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('devise.inputs.email'), required:'', autofocus:'' %>
				</div>

				<div class='grp-inputs'>
					<%= f.text_field :first_name, class: "form-control", placeholder: t('devise.inputs.first_name'), required:'' %>
					<%= f.text_field :last_name, class: "form-control", placeholder: t('devise.inputs.last_name'), required:'' %>
				</div>

				<div class='grp-inputs'>
					<%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: t('devise.inputs.current_password'), required:''  %>
					<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t('devise.inputs.new_password') %>
					<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t('devise.inputs.password_confirmation') %>
				</div>

				<%= f.submit t('devise.buttons.update'), class: 'btn btn-lg btn-primary btn-block' %>
				<%= link_to t('devise.buttons.back'), :back, class: 'btn btn-primary btn-block' %>
				<% end %>
			</div>
		</div>
	</div>
</div>
