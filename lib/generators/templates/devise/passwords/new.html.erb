<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" style='margin-top:120px'>
			<div class="account-wall">
				<h3 style='text-align:center'>Reset Password</h3>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-signin reset-password"}) do |f| %>
				<%= f.text_field :email, autofocus: true, class: "form-control", placeholder: t('devise.inputs.email'), required:'', autofocus:'' %>
				<%= f.submit t('devise.buttons.forgot'), class: 'btn btn-lg btn-primary btn-block' %>
				
				<%= render "devise/shared/links" %>
				<% end %>
					
			</div>
		</div>
	</div>
</div>